<head>
<title>@ViewBag.Title</title>
<meta charset="utf-8" />
<meta name="description" content="Stock-bd: DSE data and tools" />
<meta name="keywords" content="keywords, here" />
<meta name="robots" content="index, follow, noarchive" />
