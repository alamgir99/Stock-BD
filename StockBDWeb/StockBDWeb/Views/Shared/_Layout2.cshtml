            <span id="slogan"> @ViewBag.SiteHeader </span>
            <!-- tabs - navigation on the top -->
            <ul> <!-- use runat server to attach the current id -->
	            <li id="@ViewBag.HomePage"><a href="@Url.Action("Index", "home")"><span>home</span></a></li>
	            <li id="@ViewBag.MinuteChartPage"><a href="@Url.Action("Index","MinuteChart")"><span>minute chart</span></a></li>
