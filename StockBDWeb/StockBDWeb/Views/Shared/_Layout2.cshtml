	            <li id="@ViewBag.DownloadPage"><a href="@Url.Action("Index","Download")"><span>download</span></a></li>
	            <li id="@ViewBag.ContactPage"><a href="@Url.Action("Contact","Home")"><span>contact</span></a> </li>
	        </ul>
        </div>
        <div id="header-logo">     
	        <!-- tickscroller -->
        </div>

